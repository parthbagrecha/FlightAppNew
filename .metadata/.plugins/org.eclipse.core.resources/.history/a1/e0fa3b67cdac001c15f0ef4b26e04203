package com.flightapp.admin.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.flightapp.admin.entity.AirlineInventory;
import com.flightapp.admin.iservice.IInventoryService;
import com.flightapp.admin.repository.InventoryRepository;

@Service
public class InventoryService implements IInventoryService {

	@Autowired
	InventoryRepository inventoryRepository;

	@Override
	public Integer addInventory(AirlineInventory airlineInventory) {
		try {
			inventoryRepository.addInventory(airlineInventory.getAirlineId(), airlineInventory.getAirlineName(),
					airlineInventory.getFromPlace(), airlineInventory.getToPlace(), airlineInventory.getStartDateTime(),
					airlineInventory.getEndDateTime(), airlineInventory.getScheduleDays(),
					airlineInventory.getInstrument(), airlineInventory.getBusinessClassSeats(),
					airlineInventory.getNonBusinessClassSeats(), airlineInventory.getCost(), airlineInventory.getRows(),
					airlineInventory.getMeal());
//			return airlineInventory.getInventoryId();
			return null;
		} catch (Exception e) {
			e.printStackTrace();
			throw e;
		}
	}

}
